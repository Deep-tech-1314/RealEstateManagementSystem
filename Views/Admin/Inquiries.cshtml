@model IEnumerable<RealEstateManagementSystem.Models.Inquiry>
@{
    ViewData["Title"] = "Manage Inquiries";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold"><i class="fas fa-envelope-open-text text-info"></i> Manage Inquiries</h2>
            <p class="text-muted">View and respond to customer inquiries</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <button class="btn btn-outline-secondary active" data-filter="all">All (@Model.Count())</button>
                <button class="btn btn-outline-warning" data-filter="New">New (@Model.Count(i => i.Status == "New"))</button>
                <button class="btn btn-outline-success" data-filter="Replied">Replied (@Model.Count(i => i.Status == "Replied"))</button>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6>New Inquiries</h6>
                    <h2 class="mb-0">@Model.Count(i => i.Status == "New")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6>Read</h6>
                    <h2 class="mb-0">@Model.Count(i => i.Status == "Read")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Replied</h6>
                    <h2 class="mb-0">@Model.Count(i => i.Status == "Replied")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Inquiries Grid -->
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var inquiry in Model.OrderByDescending(i => i.CreatedAt))
            {
                <div class="col-lg-6 mb-4 inquiry-item" data-status="@inquiry.Status">
                    <div class="card inquiry-card h-100 shadow-sm">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="fw-bold mb-1">
                                        @if (inquiry.Property != null)
                                        {
                                            <i class="fas fa-home text-primary"></i>
                                            <text>@inquiry.Property.Title</text>
                                        }
                                        else
                                        {
                                            <i class="fas fa-envelope text-info"></i>
                                            <text>General Inquiry</text>
                                        }
                                    </h6>
                                    <small class="text-muted">
                                        <i class="far fa-clock"></i> @inquiry.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                    </small>
                                </div>
                                <span class="badge bg-@(inquiry.Status == "Replied" ? "success" : inquiry.Status == "Read" ? "info" : "warning")">
                                    @inquiry.Status
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="user-avatar me-2">
                                        @inquiry.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <div class="fw-bold">@inquiry.Name</div>
                                        <small class="text-muted">
                                            <i class="fas fa-envelope"></i> @inquiry.Email
                                            @if (!string.IsNullOrEmpty(inquiry.PhoneNumber))
                                            {
                                                <br>
                                                <i class="fas fa-phone"></i>
                                                <text>@inquiry.PhoneNumber</text>
                                            }
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="inquiry-message p-3 bg-light rounded mb-3">
                                <small class="text-muted d-block mb-1"><strong>Message:</strong></small>
                                <p class="mb-0">@inquiry.Message</p>
                            </div>

                            @if (!string.IsNullOrEmpty(inquiry.AdminReply))
                            {
                                <div class="admin-reply-box p-3 bg-success bg-opacity-10 border border-success rounded">
                                    <small class="text-success d-block mb-1">
                                        <strong><i class="fas fa-reply"></i> Your Reply:</strong>
                                    </small>
                                    <p class="mb-0">@inquiry.AdminReply</p>
                                    <small class="text-muted">@inquiry.RepliedAt?.ToString("MMM dd, yyyy")</small>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning small mb-0">
                                    <i class="fas fa-exclamation-circle"></i> No reply yet
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-grid gap-2">
                                <button class="btn btn-success btn-sm" onclick="openReplyModal(@inquiry.InquiryId, '@inquiry.Name', '@inquiry.Email', '@inquiry.Message', '@inquiry.AdminReply')">
                                    <i class="fas fa-reply"></i> @(string.IsNullOrEmpty(inquiry.AdminReply) ? "Reply" : "Update Reply")
                                </button>
                                @if (inquiry.Property != null)
                                {
                                    <a asp-controller="Home" asp-action="PropertyDetails" asp-route-id="@inquiry.PropertyId"
                                       class="btn btn-outline-primary btn-sm" target="_blank">
                                        <i class="fas fa-eye"></i> View Property
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                        <h5>No inquiries yet</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Reply Modal -->
<div class="modal fade" id="replyModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fas fa-reply"></i> Reply to Inquiry</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="fw-bold">Customer Name</label>
                    <p id="replyCustomerName"></p>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Email</label>
                    <p id="replyEmail"></p>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Their Message</label>
                    <p id="replyMessage" class="bg-light p-3 rounded"></p>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Your Reply *</label>
                    <textarea class="form-control" id="replyText" rows="5" placeholder="Type your response here..." required></textarea>
                </div>
                <input type="hidden" id="replyInquiryId">
                <button class="btn btn-success w-100" onclick="submitReply()">
                    <i class="fas fa-paper-plane"></i> Send Reply
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filter functionality
        document.querySelectorAll('[data-filter]').forEach(button => {
            button.addEventListener('click', function() {
                const filter = this.getAttribute('data-filter');

                document.querySelectorAll('[data-filter]').forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');

                document.querySelectorAll('.inquiry-item').forEach(item => {
                    if (filter === 'all' || item.getAttribute('data-status') === filter) {
                        item.style.display = '';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        });

        function openReplyModal(id, name, email, message, currentReply) {
            document.getElementById('replyInquiryId').value = id;
            document.getElementById('replyCustomerName').textContent = name;
            document.getElementById('replyEmail').textContent = email;
            document.getElementById('replyMessage').textContent = message;
            document.getElementById('replyText').value = currentReply || '';

            new bootstrap.Modal(document.getElementById('replyModal')).show();
        }

        function submitReply() {
            const inquiryId = document.getElementById('replyInquiryId').value;
            const reply = document.getElementById('replyText').value;

            if (!reply.trim()) {
                alert('Please enter a reply');
                return;
            }

            fetch('/Admin/ReplyInquiry', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    id: inquiryId,
                    reply: reply
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Reply sent successfully!');
                    location.reload();
                } else {
                    alert('Failed to send reply');
                }
            });
        }
    </script>
}

<style>
    .inquiry-card {
        transition: all 0.3s ease;
        border-top: 3px solid transparent;
    }

        .inquiry-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
            border-top-color: #0d6efd;
        }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 18px;
    }

    .inquiry-message {
        border-left: 3px solid #0d6efd;
    }
</style>