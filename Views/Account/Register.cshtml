<!-- Features -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Why Register With Us?</h2>
            <p class="lead text-muted">Enjoy exclusive benefits as a registered member</p>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
