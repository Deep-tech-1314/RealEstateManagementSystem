<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Real Estate Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="modern-header">
        <nav class="navbar navbar-expand-lg navbar-dark modern-navbar">
            <div class="container">
                <a class="navbar-brand modern-brand" href="/">
                    <i class="fas fa-home brand-icon"></i> 
                    <span class="brand-text">RealEstate Pro</span>
                </a>
                <button class="navbar-toggler modern-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto modern-nav">
                        <li class="nav-item">
                            <a class="nav-link modern-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link modern-link" asp-controller="Home" asp-action="Properties">
                                <i class="fas fa-building"></i> Properties
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link modern-link" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle"></i> About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link modern-link" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope"></i> Contact
                            </a>
                        </li>
                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle modern-link admin-link" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-shield"></i> Admin
                                </a>
                                <ul class="dropdown-menu modern-dropdown">
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="Admin" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="Admin" asp-action="Properties"><i class="fas fa-building"></i> Properties</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="Admin" asp-action="Bookings"><i class="fas fa-calendar-check"></i> Bookings</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="Admin" asp-action="Users"><i class="fas fa-users"></i> Users</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="Admin" asp-action="Inquiries"><i class="fas fa-envelope"></i> Inquiries</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                </ul>
                            </li>
                        }
                        else if (Context.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle modern-link user-link" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i> @Context.Session.GetString("UserName")
                                </a>
                                <ul class="dropdown-menu modern-dropdown">
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="User" asp-action="Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="User" asp-action="MyBookings"><i class="fas fa-calendar-check"></i> My Bookings</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="User" asp-action="MyInquiries"><i class="fas fa-envelope"></i> My Inquiries</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="User" asp-action="Profile"><i class="fas fa-user-edit"></i> Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link modern-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link modern-register-btn" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="modern-footer">
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="footer-brand">
                            <h5 class="footer-title">
                                <i class="fas fa-home brand-icon"></i> RealEstate Pro
                            </h5>
                            <p class="footer-description">Your trusted partner in finding the perfect property. We make your dream home a reality.</p>
                            <div class="social-links">
                                <a href="#" class="social-link-no-circle"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="social-link-no-circle"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="social-link-no-circle"><i class="fab fa-instagram"></i></a>
                                <a href="#" class="social-link-no-circle"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6 mb-4">
                        <h6 class="footer-heading">Quick Links</h6>
                        <ul class="footer-links">
                            <li><a href="/" class="footer-link"><i class="fas fa-home"></i> Home</a></li>
                            <li><a asp-controller="Home" asp-action="Properties" class="footer-link"><i class="fas fa-building"></i> Properties</a></li>
                            <li><a asp-controller="Home" asp-action="About" class="footer-link"><i class="fas fa-info-circle"></i> About</a></li>
                            <li><a asp-controller="Home" asp-action="Contact" class="footer-link"><i class="fas fa-envelope"></i> Contact</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-2 col-md-6 mb-4">
                        <h6 class="footer-heading">Services</h6>
                        <ul class="footer-links">
                            <li><a href="#" class="footer-link"><i class="fas fa-search"></i> Property Search</a></li>
                            <li><a href="#" class="footer-link"><i class="fas fa-chart-line"></i> Market Analysis</a></li>
                            <li><a href="#" class="footer-link"><i class="fas fa-handshake"></i> Consultation</a></li>
                            <li><a href="#" class="footer-link"><i class="fas fa-key"></i> Property Management</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <h6 class="footer-heading">Contact Information</h6>
                        <div class="contact-info">
                            <div class="contact-item">
                                <i class="fas fa-envelope contact-icon"></i>
                                <span>info@realestatepro.com</span>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-phone contact-icon"></i>
                                <span>+1 (555) 123-4567</span>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-map-marker-alt contact-icon"></i>
                                <span>123 Main Street, City, State 12345</span>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-clock contact-icon"></i>
                                <span>Mon - Fri: 9:00 AM - 6:00 PM</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="copyright">&copy; 2025 RealEstate Pro. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="footer-bottom-links">
                            <a href="#" class="footer-bottom-link">Privacy Policy</a>
                            <a href="#" class="footer-bottom-link">Terms of Service</a>
                            <a href="#" class="footer-bottom-link">Cookie Policy</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>