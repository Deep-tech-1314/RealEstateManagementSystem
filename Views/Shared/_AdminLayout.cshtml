<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: #f8f9fa;
        }

        .admin-sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }

            .admin-sidebar .brand {
                padding: 20px;
                background: rgba(0,0,0,0.2);
                border-bottom: 1px solid rgba(255,255,255,0.1);
            }

            .admin-sidebar .nav-link {
                color: rgba(255,255,255,0.8);
                padding: 15px 20px;
                margin: 5px 15px;
                border-radius: 8px;
                transition: all 0.3s ease;
            }

                .admin-sidebar .nav-link:hover,
                .admin-sidebar .nav-link.active {
                    background: rgba(255,255,255,0.1);
                    color: white;
                }

                .admin-sidebar .nav-link i {
                    width: 20px;
                    margin-right: 10px;
                }

        .admin-content {
            padding: 20px;
        }

        .admin-topbar {
            background: white;
            padding: 15px 30px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <div class="col-md-2 admin-sidebar">
                <div class="brand text-center text-white">
                    <h4 class="mb-0"><i class="fas fa-shield-alt"></i> Admin Panel</h4>
                    <small>RealEstate Pro</small>
                </div>

                <nav class="nav flex-column mt-3">
                    <a asp-controller="Admin" asp-action="Index" class="nav-link">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a asp-controller="Admin" asp-action="Properties" class="nav-link">
                        <i class="fas fa-home"></i> Properties
                    </a>
                    <a asp-controller="Admin" asp-action="CreateProperty" class="nav-link">
                        <i class="fas fa-plus-circle"></i> Add Property
                    </a>
                    <a asp-controller="Admin" asp-action="Bookings" class="nav-link">
                        <i class="fas fa-calendar-check"></i> Bookings
                    </a>
                    <a asp-controller="Admin" asp-action="Inquiries" class="nav-link">
                        <i class="fas fa-envelope"></i> Inquiries
                    </a>
                    <a asp-controller="Admin" asp-action="Users" class="nav-link">
                        <i class="fas fa-users"></i> Users
                    </a>
                    <hr class="text-white-50">
                    <a asp-controller="Home" asp-action="Index" class="nav-link" target="_blank">
                        <i class="fas fa-external-link-alt"></i> View Website
                    </a>
                    <a asp-controller="Account" asp-action="Logout" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="admin-topbar">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@ViewData["Title"]</h5>
                        <div>
                            <span class="me-3">
                                <i class="fas fa-user-shield"></i> @Context.Session.GetString("UserName")
                            </span>
                            <a asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>

                <div class="admin-content">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

<!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Global Admin JavaScript -->
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
            
            // Initialize DataTables where applicable
            if ($.fn.DataTable) {
                $('.datatable').DataTable({
                    responsive: true,
                    pageLength: 10,
                    language: {
                        search: "_INPUT_",
                        searchPlaceholder: "Search...",
                        lengthMenu: "Show _MENU_ entries",
                        info: "Showing _START_ to _END_ of _TOTAL_ entries",
                    }
                });
            }
            
            // Toggle featured property status
            $(document).on('click', '.toggle-feature', function() {
                var propertyId = $(this).data('id');
                var isFeatured = $(this).data('featured');
                
                $.ajax({
                    url: '/Admin/ToggleFeatured',
                    type: 'POST',
                    data: { id: propertyId, isFeatured: !isFeatured },
                    success: function(response) {
                        if (response.success) {
                            window.location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('An error occurred while processing your request.');
                    }
                });
            });
            
            // Delete property confirmation
            $(document).on('click', '.delete-property', function() {
                var propertyId = $(this).data('id');
                
                if (confirm('Are you sure you want to delete this property? This action cannot be undone.')) {
                    $.ajax({
                        url: '/Admin/DeleteProperty',
                        type: 'POST',
                        data: { id: propertyId },
                        success: function(response) {
                            if (response.success) {
                                window.location.reload();
                            } else {
                                alert('Error: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('An error occurred while processing your request.');
                        }
                    });
                }
            });
            
            // Handle booking status changes
            $(document).on('click', '.change-booking-status', function() {
                var bookingId = $(this).data('id');
                var newStatus = $(this).data('status');
                
                $.ajax({
                    url: '/Admin/UpdateBookingStatus',
                    type: 'POST',
                    data: { id: bookingId, status: newStatus },
                    success: function(response) {
                        if (response.success) {
                            window.location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('An error occurred while processing your request.');
                    }
                });
            });
        });
    </script>
    
    @if (ViewData["Title"]?.ToString() == "Admin Dashboard")
    {
    <script>
        // Property Type Chart
        document.addEventListener('DOMContentLoaded', function() {
            if (document.getElementById('propertyTypeChart')) {
                var ctx = document.getElementById('propertyTypeChart').getContext('2d');
                var propertyTypeChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Houses', 'Apartments', 'Villas', 'Commercial'],
                        datasets: [{
                            data: [@ViewBag.HouseCount, @ViewBag.ApartmentCount, @ViewBag.VillaCount, @ViewBag.CommercialCount],
                            backgroundColor: [
                                '#4e73df',
                                '#1cc88a',
                                '#36b9cc',
                                '#f6c23e'
                            ],
                            hoverBackgroundColor: [
                                '#2e59d9',
                                '#17a673',
                                '#2c9faf',
                                '#dda20a'
                            ],
                            hoverBorderColor: "rgba(234, 236, 244, 1)",
                        }],
                    },
                    options: {
                        maintainAspectRatio: false,
                        tooltips: {
                            backgroundColor: "rgb(255,255,255)",
                            bodyFontColor: "#858796",
                            borderColor: '#dddfeb',
                            borderWidth: 1,
                            xPadding: 15,
                            yPadding: 15,
                            displayColors: false,
                            caretPadding: 10,
                        },
                        legend: {
                            display: false
                        },
                        cutoutPercentage: 80,
                    },
                });
            }
        });
    </script>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>