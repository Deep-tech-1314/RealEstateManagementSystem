    }

    .icon-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .office-card {
        border: none;
        transition: all 0.3s ease;
    }

        .office-card:hover {
            transform: translateY(-5px);
