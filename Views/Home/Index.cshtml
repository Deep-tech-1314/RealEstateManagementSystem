    var villas = Model?.Where(p => p.PropertyType == "Villa").Take(3).ToList() ?? new List<RealEstateManagementSystem.Models.Property>();
    var commercial = Model?.Where(p => p.PropertyType == "Commercial").Take(3).ToList() ?? new List<RealEstateManagementSystem.Models.Property>();
    var land = Model?.Where(p => p.PropertyType == "Land").Take(3).ToList() ?? new List<RealEstateManagementSystem.Models.Property>();
}

