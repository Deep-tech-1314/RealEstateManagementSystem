<script>
    // Dynamic image loading for carousel
    document.addEventListener('DOMContentLoaded', function() {
        // Array of warm and aesthetic images for carousel
        const carouselImages = [
            // First slide is fixed as "Find Ur Dream Property"
            "https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=1920&h=600&fit=crop",
            // Images for "Explore Live Locations"
            ["https://images.unsplash.com/photo-1512917774080-9991f1c4c750?w=1920&h=600&fit=crop", 
             "https://images.unsplash.com/photo-1523217582562-09d0def993a6?w=1920&h=600&fit=crop",
             "https://images.unsplash.com/photo-1502005229762-cf1b2da7c5d6?w=1920&h=600&fit=crop"],
            // Images for "Luxury Living Awaits"
            ["https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=1920&h=600&fit=crop",
             "https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?w=1920&h=600&fit=crop",
             "https://images.unsplash.com/photo-1600566753086-00f18fb6b3ea?w=1920&h=600&fit=crop"]
        ];
        
        // Get carousel items
        const carouselItems = document.querySelectorAll('#heroCarousel .carousel-item');
        
        // Set random images for slides 2 and 3 (index 1 and 2)
        for (let i = 1; i < carouselItems.length; i++) {
            const imageArray = carouselImages[i];
            const randomIndex = Math.floor(Math.random() * imageArray.length);
            const randomImage = imageArray[randomIndex];
            
            const imgElement = carouselItems[i].querySelector('img');
            if (imgElement) {
                imgElement.src = randomImage;
            }
        }
    });
</script>

