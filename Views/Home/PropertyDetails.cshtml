@model RealEstateManagementSystem.Models.Property
@using RealEstateManagementSystem.Services
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4 mb-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Properties">Properties</a></li>
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Property Images -->
        <div class="col-lg-8 mb-4">
            @if (!string.IsNullOrEmpty(Model.MainImage))
            {
                <img src="@Model.MainImage" class="property-detail-image w-100 mb-3" alt="@Model.Title">
            }
            else
            {
                <img src="/images/properties/default.jpg" class="property-detail-image w-100 mb-3" alt="@Model.Title">
            }

            <!-- Additional Images -->
            @if (!string.IsNullOrEmpty(Model.AdditionalImages))
            {
                var images = Model.AdditionalImages.Split(',');
                <div class="row">
                    @foreach (var img in images)
                    {
                        <div class="col-md-4 mb-3">
                            <img src="@img" class="img-fluid rounded" alt="Property Image" style="height: 200px; width: 100%; object-fit: cover;">
                        </div>
                    }
                </div>
            }

            <!-- Property Description -->
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title mb-3"><i class="fas fa-info-circle"></i> Description</h4>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

            <!-- Property Features -->
            @if (!string.IsNullOrEmpty(Model.Features))
            {
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title mb-3"><i class="fas fa-star"></i> Features & Amenities</h4>
                        <ul class="property-features">
                            @foreach (var feature in Model.Features.Split(','))
                            {
                                <li><i class="fas fa-check text-success"></i> @feature.Trim()</li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Price Card -->
            <div class="card mb-4 shadow">
                <div class="card-body text-center">
                    <h2 class="text-primary fw-bold mb-0">
                        @CurrencyService.ConvertAndFormatPrice(Model.Price)
                    </h2>
                    @if (Model.ListingType == "Rent")
                    {
                        <p class="text-muted">per month</p>
                    }
                    <span class="badge bg-@(Model.ListingType == "Sale" ? "primary" : "success") mb-3">
                        For @Model.ListingType
                    </span>

                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <button class="btn btn-primary w-100 mb-2" data-bs-toggle="modal" data-bs-target="#bookingModal">
                            <i class="fas fa-calendar-check"></i> Book a Visit
                        </button>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-sign-in-alt"></i> Login to Book
                        </a>
                    }

                    <button class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#inquiryModal">
                        <i class="fas fa-envelope"></i> Send Inquiry
                    </button>
                </div>
            </div>

            <!-- Property Details Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-home"></i> Property Details</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled property-features">
                        <li><strong>Property Type:</strong> @Model.PropertyType</li>
                        <li><strong>Status:</strong> <span class="badge bg-success">@Model.Status</span></li>
                        @if (Model.Bedrooms.HasValue)
                        {
                            <li><strong>Bedrooms:</strong> @Model.Bedrooms</li>
                        }
                        @if (Model.Bathrooms.HasValue)
                        {
                            <li><strong>Bathrooms:</strong> @Model.Bathrooms</li>
                        }
                        @if (Model.SquareFeet.HasValue)
                        {
                            <li><strong>Square Feet:</strong> @Model.SquareFeet</li>
                        }
                        @if (Model.YearBuilt.HasValue)
                        {
                            <li><strong>Year Built:</strong> @Model.YearBuilt</li>
                        }
                        @if (!string.IsNullOrEmpty(Model.ParkingSpaces))
                        {
                            <li><strong>Parking:</strong> @Model.ParkingSpaces</li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Location Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-map-marker-alt"></i> Location</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Address:</strong></p>
                    <p>@Model.Address</p>
                    <p class="mb-1"><strong>City:</strong> @Model.City</p>
                    <p class="mb-1"><strong>State:</strong> @Model.State</p>
                    <p class="mb-0"><strong>Zip Code:</strong> @Model.ZipCode</p>
                </div>
            </div>

            <!-- Agent Card -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-tie"></i> Listed By</h5>
                </div>
                <div class="card-body text-center">
                    <h6 class="fw-bold">@Model.Owner.FullName</h6>
                    <p class="text-muted mb-2">@Model.Owner.Email</p>
                    @if (!string.IsNullOrEmpty(Model.Owner.PhoneNumber))
                    {
                        <p class="text-muted"><i class="fas fa-phone"></i> @Model.Owner.PhoneNumber</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Booking Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-calendar-check text-primary"></i> Book a Visit
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="booking-info mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Property Details</h6>
                            <p class="mb-1"><strong>@Model.Title</strong></p>
                            <p class="mb-1 text-muted">@Model.PropertyType - @Model.ListingType</p>
                            <p class="mb-0 text-primary fw-bold">@CurrencyService.ConvertAndFormatPrice(Model.Price)</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Location</h6>
                            <p class="mb-0">@Model.Address, @Model.City</p>
                        </div>
                    </div>
                </div>
                
                <form id="bookingForm" class="modern-form">
                    <input type="hidden" id="propertyId" value="@Model.PropertyId">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-calendar-alt text-primary"></i> Preferred Date
                            </label>
                            <input type="date" class="form-control form-control-modern" id="bookingDate" required min="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-clock text-primary"></i> Preferred Time
                            </label>
                            <select class="form-select form-control-modern" id="bookingTime" required>
                                <option value="">Select Time</option>
                                <option value="09:00 AM">09:00 AM</option>
                                <option value="10:00 AM">10:00 AM</option>
                                <option value="11:00 AM">11:00 AM</option>
                                <option value="12:00 PM">12:00 PM</option>
                                <option value="02:00 PM">02:00 PM</option>
                                <option value="03:00 PM">03:00 PM</option>
                                <option value="04:00 PM">04:00 PM</option>
                                <option value="05:00 PM">05:00 PM</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-comment text-primary"></i> Special Requirements (Optional)
                        </label>
                        <textarea class="form-control form-control-modern" id="bookingMessage" rows="3" placeholder="Any special requirements or questions about the property..."></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-modern">
                            <i class="fas fa-paper-plane"></i> Submit Booking Request
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Inquiry Modal -->
<div class="modal fade" id="inquiryModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modern-modal">
            <div class="modal-header modern-modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-envelope text-primary"></i> Send Inquiry
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="inquiry-info mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Property Information</h6>
                            <p class="mb-1"><strong>@Model.Title</strong></p>
                            <p class="mb-1 text-muted">@Model.PropertyType - @Model.ListingType</p>
                            <p class="mb-0 text-primary fw-bold">@CurrencyService.ConvertAndFormatPrice(Model.Price)</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Property Owner</h6>
                            <p class="mb-1"><strong>@Model.Owner.FullName</strong></p>
                            <p class="mb-0 text-muted">@Model.Owner.Email</p>
                        </div>
                    </div>
                </div>
                
                <form asp-controller="Home" asp-action="SubmitInquiry" method="post" class="modern-form" id="inquiryForm">
                    <input type="hidden" name="PropertyId" value="@Model.PropertyId">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-user text-primary"></i> Full Name *
                            </label>
                            <input type="text" name="Name" class="form-control form-control-modern" required placeholder="Enter your full name" maxlength="100">
                            <div class="invalid-feedback">Please provide your full name.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-envelope text-primary"></i> Email Address *
                            </label>
                            <input type="email" name="Email" class="form-control form-control-modern" required placeholder="Enter your email" maxlength="100">
                            <div class="invalid-feedback">Please provide a valid email address.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-phone text-primary"></i> Phone Number (Optional)
                        </label>
                        <input type="tel" name="PhoneNumber" class="form-control form-control-modern" placeholder="Enter your phone number" maxlength="20">
                        <div class="invalid-feedback">Please provide a valid phone number.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-comment-dots text-primary"></i> Your Message *
                        </label>
                        <textarea name="Message" class="form-control form-control-modern" rows="4" required placeholder="Tell us about your interest in this property..." maxlength="1000"></textarea>
                        <div class="invalid-feedback">Please provide your message.</div>
                        <div class="form-text">Maximum 1000 characters</div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-modern" id="inquirySubmitBtn">
                            <i class="fas fa-paper-plane"></i> Send Inquiry
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Modern Modal Styles */
    .modern-modal {
        border: none;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
    }

    .modern-modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 20px 20px 0 0;
        border: none;
        padding: 1.5rem;
    }

    .modern-modal-header .modal-title {
        font-weight: 600;
        margin: 0;
    }

    .modern-modal-header .btn-close {
        filter: invert(1);
        opacity: 0.8;
    }

    .modern-modal-header .btn-close:hover {
        opacity: 1;
    }

    .booking-info, .inquiry-info {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border-radius: 15px;
        padding: 1.5rem;
        border-left: 4px solid #667eea;
    }

    .modern-form .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .modern-form .form-label i {
        margin-right: 0.5rem;
    }

    .form-control-modern {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
    }

    .form-control-modern:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        background: white;
        transform: translateY(-2px);
    }

    .btn-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-modern::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .btn-modern:hover::before {
        left: 100%;
    }

    .btn-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .btn-modern:active {
        transform: translateY(0);
    }

    /* Loading States */
    .btn-modern.loading {
        pointer-events: none;
        opacity: 0.7;
    }

    .btn-modern.loading::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 20px;
        height: 20px;
        margin: -10px 0 0 -10px;
        border: 2px solid transparent;
        border-top: 2px solid white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

@section Scripts {
    <script>
        // Enhanced Booking Form with Loading States
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            
            // Add loading state
            submitBtn.classList.add('loading');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            
            const data = {
                propertyId: document.getElementById('propertyId').value,
                bookingDate: document.getElementById('bookingDate').value,
                bookingTime: document.getElementById('bookingTime').value,
                message: document.getElementById('bookingMessage').value
            };

            fetch('/User/BookProperty', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                // Remove loading state
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = originalText;
                
                if (data.success) {
                    // Show success message
                    showNotification(data.message, 'success');
                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('bookingModal'));
                    modal.hide();
                    // Reset form
                    this.reset();
                } else {
                    showNotification(data.message, 'error');
                }
            })
            .catch(error => {
                // Remove loading state
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = originalText;
                showNotification('An error occurred. Please try again.', 'error');
            });
        });

        // Enhanced Notification System
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            document.body.appendChild(notification);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }

        // Form Validation Enhancement
        document.querySelectorAll('.form-control-modern').forEach(input => {
            input.addEventListener('blur', function() {
                if (this.hasAttribute('required') && !this.value.trim()) {
                    this.classList.add('is-invalid');
                } else {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                }
            });
        });

        // Enhanced Inquiry Form with Loading States
        document.getElementById('inquiryForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('inquirySubmitBtn');
            const originalText = submitBtn.innerHTML;
            
            // Add loading state
            submitBtn.classList.add('loading');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
            
            // Validate form
            let isValid = true;
            const requiredFields = this.querySelectorAll('[required]');
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.classList.add('is-invalid');
                    isValid = false;
                } else {
                    field.classList.remove('is-invalid');
                    field.classList.add('is-valid');
                }
            });
            
            if (!isValid) {
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = originalText;
                showNotification('Please fill in all required fields.', 'error');
                return;
            }
            
            // Submit form
            const formData = new FormData(this);
            
            fetch('/Home/SubmitInquiry', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (response.ok) {
                    return response.text();
                }
                throw new Error('Network response was not ok');
            })
            .then(data => {
                // Remove loading state
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = originalText;
                
                // Show success message
                showNotification('Your inquiry has been submitted successfully!', 'success');
                
                // Close modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('inquiryModal'));
                modal.hide();
                
                // Reset form
                this.reset();
                this.querySelectorAll('.is-valid, .is-invalid').forEach(el => {
                    el.classList.remove('is-valid', 'is-invalid');
                });
            })
            .catch(error => {
                // Remove loading state
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = originalText;
                showNotification('An error occurred. Please try again.', 'error');
            });
        });
    </script>
}